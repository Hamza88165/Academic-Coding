<html>
<head>
<title>Titre de ma page</title>
<script>
	<!-- methode 1 -->
	function Maj(){
		var i1= document.getElementById("i1");
		i1.value=i1.value.toUpperCase();
	}
	<!-- methode 2 -->
	function maj(x){
		x.value=x.value.toUpperCase();
	}
</script>
</head>
<body>
<label>Maj 1:</label>
<input type="text" id="i1" oninput="Maj()"></br>
<label>Maj 1:</label>
<input type="text" oninput="maj(this)">
</body>
</html>